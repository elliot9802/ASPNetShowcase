@page
@model AppRazor.Pages.Friends.OverviewByCountryModel
@{
    ViewData["Title"] = "Overview By Country";
}

<div class="container my-4">
    <h2 class="text-center mb-4">Overview By Country</h2>
    <div class="alert alert-info" role="alert">
        Click any of the countries below to see an overview of that country's friends and pets.
    </div>

    @if (Model.friendsByCountry.Any())
    {
        <div class="list-group">
            @foreach (var item in Model.friendsByCountry)
            {
                <a asp-page="./OverviewFriendPets" asp-route-country="@item.Country" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@item.Country</h5>
                        <small>Total Cities: @item.Cities.Count()</small>
                    </div>
                    <span class="badge bg-primary rounded-pill">@item.Cities.Sum(f => f.NrFriends) Friends</span>
                </a>
            }
        </div>
    }
    else
    {
        <p class="text-muted text-center">No data available.</p>
    }
</div>
